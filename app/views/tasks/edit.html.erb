<div class="container mt-4">
  <h1>Edit Task</h1>

  <%= form_with model: @task, local: true, class: "mt-4" do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Task Title" %>
    </div>

    <div class="mb-3">
      <%= form.label :details, class: "form-label" %>
      <%= form.text_area :details, class: "form-control", placeholder: "Task Details" %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, "Completed", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Save Changes", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Back to Task', task_path(@task), class: "btn btn-secondary" %>
</div>
